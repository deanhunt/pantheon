{
    "name": "Pantheon",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Showing your Chrome",
    "background": {
        "persistent": true,
        "page": "background.html"
    },
    "web_accessible_resources": [
        "jquery-1.8.3.min.js",
        "background.js"
    ],
    "browser_action": {
        "default_icon": {
            "19": "icon_off_19.png",
            "38": "icon_off_38.png"
        }
    },
    "permissions": [
        "tabs",
        "cookies",
        "*://localhost/",
        "*://*.nytimes.com/*",
        "*://*.twitter.com/*",
        "*://*.ycombinator.com/*"
    ],
    "incognito": "split"
}
